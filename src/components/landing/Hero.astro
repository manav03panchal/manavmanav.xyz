---
const { class: className } = Astro.props;
---
<section class:list={["bg-primary", className]}>
  <div class="px-6 lg:px-8 2xl:max-w-7xl mx-auto pt-6 lg:pt-8">
    <h1 class="text-secondary text-6xl lg:text-8xl font-bold tracking-tighter leading-[0.85]" data-aos="fade-up" data-aos-duration="800">
      Manav<br/>Panchal
    </h1>
  </div>
  <div class="px-6 lg:px-8 2xl:max-w-7xl mx-auto pb-2">
    <div class="mt-3">
      <div class="flex flex-col sm:flex-row gap-1 justify-between lg:items-center" data-aos="fade-up" data-aos-duration="800">
        <div class="flex gap-2 items-center">
          <h3 class="text-secondary text-xs font-medium">
            <span>Developer</span>
            <span class="font-bold">Writer</span>
            <span class="italic">Builder</span>
          </h3>
          <span class="h-2.5 border-secondary border"></span>
          <span class="text-secondary text-xs font-semibold">Available for work</span>
        </div>
        <nav>
          <ul class="flex gap-3 text-xs">
            <li><a href="/posts" class="hover:text-secondary/80 text-secondary">Posts</a></li>
            <li><a href="https://github.com/manav03panchal" target="_blank" rel="noopener noreferrer" class="hover:text-secondary/80 text-secondary">GitHub</a></li>
            <li><a href="mailto:manav03panchal@proton.me" target="_blank" rel="noopener noreferrer" class="hover:text-secondary/80 text-secondary">Email</a></li>
            <li>
              <button id="theme-toggle" class="hover:text-secondary/80 text-secondary" aria-label="Toggle dark mode">
                <span class="dark-icon hidden">Light</span>
                <span class="light-icon">Dark</span>
              </button>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</section>
