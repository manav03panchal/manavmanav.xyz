---
const links = [
  { url: "https://github.com/manav03panchal", title: "GitHub" },
  { url: "mailto:manav03panchal@proton.me", title: "Email" },
  { url: "/rss.xml", title: "RSS" },
];
---

<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-6">
    <div class="mt-32 space-y-2">
      <div
        class="h-0.5 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="1000">
      </div>
      <h3
        class="text-secondary text-xs font-medium"
        data-aos="fade-up"
        data-aos-duration="1500">
        <span>Find</span>
        <span class="font-bold">me</span>
        <span class="italic">elsewhere</span>
      </h3>
      <div
        class="h-1.5 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="2000">
      </div>
      <div class="h-3 bg-secondary" data-aos="fade-up" data-aos-duration="2500">
      </div>
      <div class="h-6 bg-secondary" data-aos="fade-up" data-aos-duration="3000">
      </div>
      <div
        class="h-12 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="3000">
      </div>
      <div
        class="h-24 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="3000"
        data-aos-delay="150">
      </div>
    </div>

    <ul
      class="mx-auto flex flex-col lg:flex-row text-left gap-3 items-start text-secondary mt-3">
      {
        links.map((link) => (
          <li class="flow-root col-span-full h-full">
            <a href={link.url} target="_blank" rel="noopener noreferrer" class="hover:text-secondary/60 transition-colors">
              <p class="italic shrink-0 text-xs">{link.title}</p>
            </a>
          </li>
        ))
      }
    </ul>

    <div class="flex w-full mt-6 text-secondary">
      <span class="text-xs font-medium flex">
        &copy; {new Date().getFullYear()} Manav Panchal
      </span>
    </div>
  </div>
</section>
