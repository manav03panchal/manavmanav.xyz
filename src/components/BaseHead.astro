---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Manav Panchal",
  description = "Developer, writer, and builder."
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, "https://manavmanav.xyz");
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Basic Meta Tags -->
<title>{title}</title>
<meta name="description" content={description} />
<meta name="author" content="Manav Panchal" />

<!-- Favicons -->
<link rel="icon" href="/favicon.ico" sizes="any" />
<link rel="icon" href="/icon.svg" type="image/svg+xml" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:site_name" content="Manav Panchal" />

<!-- Twitter -->
<meta property="twitter:card" content="summary" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- RSS Feed -->
<link rel="alternate" type="application/rss+xml" title="Manav Panchal" href="/rss.xml" />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />

<!-- Theme Color for Mobile Browsers -->
<meta name="theme-color" content="#f4f5ef" />

<!-- AOS Animations -->
<link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap" rel="stylesheet">
