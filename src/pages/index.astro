---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/landing/Hero.astro";
import About from "../components/landing/About.astro";
---

<BaseLayout>
  <div class="h-screen flex flex-col overflow-hidden" data-landing>
    <Hero class="flex-shrink-0" />
    <About class="flex-1 flex flex-col justify-center" />
  </div>
</BaseLayout>

<style is:global>
  body:has([data-landing]) {
    overflow: hidden;
  }
</style>
